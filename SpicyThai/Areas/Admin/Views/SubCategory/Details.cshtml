@model SpicyThai.Models.ViewModels.SubCategoryAndCategoryViewModel
@using SpicyThai.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details of SubCategory</h2>
<br />

<form method="post" asp-action="Details">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select disabled id="ddlCategoryList" asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"> </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SubCategory.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="SubCategory.Name" class="form-control" />
            </div>
            <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToListButton" model="Model.SubCategory.Id" />
            </div>
        </div>
    </div>
</form>